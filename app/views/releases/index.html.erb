  <h1>RELEASES</h1>
  <div id="releases">
    <% @releases.each do |release| %>
    <div class="release">
      <div class="cover">
	<h1>
	  <%= link_to release.title, release %>  
	</h1>
	<img src='<%= release.cover.url(:thumb) %>'/>
      </div>
      <div class="details">
	<% release.artists.each do |artist| %>
	  <p><%= link_to artist.name, artist, :class => 'artist-link' %></p>
	<% end %>
	<p><%= markdown(release.description).html_safe %></p>
      </div>
      <ul>
	<% if session[:user_id] %>
	  <li><%= link_to 'Show', release %></li>
	  <li><%= link_to 'Edit', edit_release_path(release) %></li>
	  <li><%= link_to 'Destroy', release, method: :delete, data: { confirm: 'Are you sure?' } %></li>
	  <% end %>
      </ul>
    </div>    
    <% end %>
    <br />
    <% if session[:user_id] %>
      <%= link_to 'New Release', new_release_path %>
    <% end %>
  </div>


